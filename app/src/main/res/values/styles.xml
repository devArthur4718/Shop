<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="bemVindoAoEscambo">
        <item name="android:fontFamily">@font/circular_std_bold</item>
        <item name="android:textColor">#FF1C45AB</item>
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingMultiplier">1.13</item>
    </style>

    <style name="inputLabel">
        <item name="android:fontFamily">@font/ciruclar_std_book</item>
        <item name="android:textColor">#FF3E4A59</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingMultiplier">1.33</item>
    </style>

    <style name="esqueciMinhaSenha">
        <item name="android:fontFamily">@font/circular_std_medium</item>
        <item name="android:textColor">#FF3E4A59</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>

    <style name="greenGradientButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">53dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/circular_std_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:lineSpacingMultiplier">0.86</item>
        <item name="android:background">@drawable/bg_green</item>
    </style>

    <style name="ouAcesseUtilizando">
        <item name="android:fontFamily">@font/circular_std_medium</item>
        <item name="android:textColor">#FF3E4A59</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingMultiplier">1.17</item>
    </style>

    <style name="facebookButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">53dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_facebook</item>
        <item name="fontFamily">@font/circular_std_medium</item>
        <item name="android:lineSpacingMultiplier">0.86</item>
    </style>

    <style name="googleButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:fontFamily">@font/ciruclar_std_book</item>
    </style>

    <style name="label">
        <item name="android:fontFamily">CircularStd-Medium</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="precisamosDeAlguma">
        <item name="android:fontFamily">@font/circular_std_bold</item>
        <item name="android:textColor">#FF1C45AB</item>
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingMultiplier">1.13</item>
    </style>

    <style name="esqueceuSuaSenha">
        <item name="android:fontFamily">@font/circular_std_bold</item>
        <item name="android:textColor">#FF1C45AB</item>
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingMultiplier">1.21</item>
    </style>

    <style name="nosInformeSeuEMa">
        <item name="android:fontFamily">@font/circular_std_bold</item>
        <item name="android:textColor">#FF3E4A59</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">1.31</item>
    </style>

    <style name="titleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/circular_std_bold</item>
    </style>

    <style name="subtitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:fontFamily">@font/ciruclar_std_book</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="style_capsule">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">4dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@drawable/capsule_shape</item>
        <item name="android:fontFamily">@font/circular_std_bold</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="card_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:fontFamily">@font/circular_std_bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="card_name">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:fontFamily">@font/circular_std_bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>


</resources>
