<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>


    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.login.LoginActivity">

            <ImageView
                android:layout_width="387dp"
                android:layout_height="435dp"
                android:layout_marginStart="170dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:contentDescription="@string/water_mark"
                android:src="@drawable/shape_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.493"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView17"
                android:layout_width="387dp"
                android:layout_height="75dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="64dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/app_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/title" />

            <TextView
                android:id="@+id/tvLoginSubtitle"
                style="@style/bemVindoAoEscambo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:text="@string/login_subtitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView17" />


            <EditText
                android:id="@+id/edtLoginEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:inputType="textEmailAddress"
                android:backgroundTint="@android:color/black"
                app:layout_constraintEnd_toEndOf="@+id/tvLoginSubtitle"
                app:layout_constraintStart_toStartOf="@+id/tvLoginSubtitle"
                app:layout_constraintTop_toBottomOf="@+id/tvFullName" />

            <EditText
                android:id="@+id/edtLoginPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:inputType="textPassword"
                android:backgroundTint="@android:color/black"
                app:layout_constraintEnd_toEndOf="@+id/edtLoginEmail"
                app:layout_constraintStart_toStartOf="@+id/edtLoginEmail"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <TextView
                android:id="@+id/tvRecoveryPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/circular_std_medium"
                android:text="@string/esqueci_senha"
                android:textColor="#3E4A59"
                app:layout_constraintEnd_toEndOf="@+id/edtLoginPassword"
                app:layout_constraintTop_toBottomOf="@+id/edtLoginPassword" />

            <Button
                android:id="@+id/btnLogin"
                style="@style/greenGradientButton"
                android:layout_marginTop="16dp"
                android:text="@string/entrar"
                app:layout_constraintEnd_toEndOf="@+id/edtLoginPassword"
                app:layout_constraintStart_toStartOf="@+id/edtLoginPassword"
                app:layout_constraintTop_toBottomOf="@+id/tvRecoveryPassword" />

            <TextView
                android:id="@+id/textView2"
                style="@style/ouAcesseUtilizando"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/acesse_redes_sociais"
                app:layout_constraintEnd_toEndOf="@+id/btnLogin"
                app:layout_constraintStart_toStartOf="@+id/btnLogin"
                app:layout_constraintTop_toBottomOf="@+id/btnLogin" />

            <Button
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="53dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_google"
                android:text="@string/google"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="@+id/button2"
                app:layout_constraintStart_toStartOf="@+id/button2"
                app:layout_constraintTop_toBottomOf="@+id/button2" />

            <Button
                android:id="@+id/button2"
                style="@style/facebookButton"
                android:layout_marginStart="8dp"
                android:clickable="false"
                android:focusable="false"
                android:text="@string/facebook"
                app:layout_constraintEnd_toEndOf="@+id/btnLogin"
                app:layout_constraintStart_toStartOf="@+id/btnLogin"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <TextView
                android:id="@+id/tabelCreateAccount"
                style="@style/googleButton"
                android:text="@string/nao_tem_conta"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tvCreateAccout"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button3" />

            <TextView
                android:id="@+id/tvCreateAccout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/ciruclar_std_book"
                android:text="@string/createaccount"
                android:textColor="#3E4A59"
                app:layout_constraintBaseline_toBaselineOf="@+id/tabelCreateAccount"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/tabelCreateAccount" />

            <TextView
                android:id="@+id/tvFullName"
                style="@style/inputLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="32dp"
                android:text="@string/e_mail"
                app:layout_constraintStart_toStartOf="@+id/edtLoginEmail"
                app:layout_constraintTop_toBottomOf="@+id/tvLoginSubtitle" />

            <TextView
                android:id="@+id/textView6"
                style="@style/inputLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="32dp"
                android:text="@string/senha"
                app:layout_constraintStart_toStartOf="@+id/edtLoginPassword"
                app:layout_constraintTop_toBottomOf="@+id/edtLoginEmail" />

            <Button
                android:id="@+id/button4"
                android:layout_width="60dp"
                android:layout_height="54dp"
                android:background="@drawable/rouded_white_corner"
                android:clickable="false"
                android:elevation="8dp"
                android:focusable="false"
                app:layout_constraintBottom_toBottomOf="@+id/button2"
                app:layout_constraintStart_toStartOf="@+id/button2"
                app:layout_constraintTop_toTopOf="@+id/button2"
                app:layout_constraintVertical_bias="0.0" />


            <Button
                android:id="@+id/button5"
                android:layout_width="60dp"
                android:layout_height="54dp"
                android:background="@drawable/rouded_white_corner"
                android:clickable="false"
                android:elevation="8dp"
                android:focusable="false"
                app:layout_constraintBottom_toBottomOf="@+id/button3"
                app:layout_constraintStart_toStartOf="@+id/button3"
                app:layout_constraintTop_toTopOf="@+id/button3" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:elevation="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/button4"
                app:layout_constraintEnd_toEndOf="@+id/button4"
                app:layout_constraintStart_toStartOf="@+id/button2"
                app:layout_constraintTop_toTopOf="@+id/button4"
                app:srcCompat="@drawable/ic_facebook" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:elevation="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/button5"
                app:layout_constraintEnd_toEndOf="@+id/button5"
                app:layout_constraintStart_toStartOf="@+id/button3"
                app:layout_constraintTop_toTopOf="@+id/button5"
                app:srcCompat="@drawable/google_logo" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>
</layout>

